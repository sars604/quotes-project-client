{{#each quotes as |quote|}}
  {{log quote}}

  <section class="quote-info" data-id="{{quote.id}}">
    <p>"{{quote.text}}"</p>
    <p> &mdash; <em>{{quote.cite}}</em></p>
    <p>
      <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modal-{{quote.id}}">
        Edit
      </button>
      <button id="delete-quote" type="button" class="btn btn-primary submit remove">Delete</button></p>


<!-- Update Quote Modal -->
<div data-backdrop="true" class="modal fade update-modal" id="modal-{{quote.id}}" tabindex="-1" role="dialog" aria-labelledby="updateQuoteModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="modal-title-{{quote.id}}">Update Quote</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form class="update-quote-form">
          <input name="quote[text]" type="text" placeholder="Quote Text" class="form-control"><br>
          <input name="quote[cite]" type="text" placeholder="Quote Cite" class="form-control"><br>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Save changes</button>
      </div>
    </form>
      </div>
    </div>
  </div>
</div>

  </section>

{{/each}}
